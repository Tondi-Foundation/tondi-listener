# Tondi Scan Server Environment Variables

# Server Configuration
TONDI_SCAN_HOST_URL=127.0.0.1:3000
TONDI_SCAN_GRPC_URL=grpc://8.210.45.192:16610
TONDI_SCAN_DATABASE_URL=postgres://postgres:postgres@127.0.0.1/postgres
TONDI_SCAN_LOG_LEVEL=info
TONDI_SCAN_ENVIRONMENT=development

# Event Configuration
# Comma-separated list of enabled blockchain events
TONDI_SCAN_ENABLED_EVENTS=block-added,utxos-changed,virtual-chain-changed

# Event Strategy (real-time, batch, priority)
TONDI_SCAN_EVENT_STRATEGY=real-time

# Batch Processing (when using batch strategy)
TONDI_SCAN_BATCH_SIZE=100
TONDI_SCAN_BATCH_TIMEOUT_MS=100

# Event Processing
TONDI_SCAN_BUFFER_SIZE=1000
TONDI_SCAN_ENABLE_DEDUPLICATION=true

# CORS Configuration
# Example 1: Allow all origins (equivalent to no CORS restrictions)
# TONDI_SCAN_CORS_ALLOWED_ORIGINS=*
# or
# TONDI_SCAN_CORS_ALLOWED_ORIGINS=

# Example 2: Restrict specific origins
TONDI_SCAN_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Example 3: Allow all methods (equivalent to no CORS restrictions)
# TONDI_SCAN_CORS_ALLOWED_METHODS=*
# or
# TONDI_SCAN_CORS_ALLOWED_METHODS=

# Example 4: Restrict specific methods
TONDI_SCAN_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE

# Example 5: Allow all headers (equivalent to no CORS restrictions)
# TONDI_SCAN_CORS_ALLOWED_HEADERS=*
# or
# TONDI_SCAN_CORS_ALLOWED_HEADERS=

# Example 6: Restrict specific headers
TONDI_SCAN_CORS_ALLOWED_HEADERS=Content-Type,Authorization

TONDI_SCAN_CORS_MAX_AGE=3600

# Security Configuration
TONDI_SCAN_RATE_LIMIT=100
TONDI_SCAN_MAX_BODY_SIZE=10485760
